<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
       
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.customer.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
    	<servlet-name>customerInsert</servlet-name>
    	<servlet-class>com.customer.CustomerInsert</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>customerInsert</servlet-name>
    	<url-pattern>/insert</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>updateCustomer</servlet-name>
    	<servlet-class>com.customer.UpdateCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>updateCustomer</servlet-name>
    	<url-pattern>/update</url-pattern>
    </servlet-mapping>
	
	<servlet>
    	<servlet-name>deleteCustomer</servlet-name>
    	<servlet-class>com.customer.DeleteCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>deleteCustomer</servlet-name>
    	<url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>resetPassword</servlet-name>
    	<servlet-class>com.customer.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>resetPassword</servlet-name>
    	<url-pattern>/reset</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>changePassword</servlet-name>
    	<servlet-class>com.customer.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>changePassword</servlet-name>
    	<url-pattern>/change</url-pattern>
    </servlet-mapping>
    
	<servlet>
    	<servlet-name>adminlogin</servlet-name>
    	<servlet-class>com.customer.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>adminlogin</servlet-name>
    	<url-pattern>/admin</url-pattern>
    </servlet-mapping>
	
	
</web-app>

